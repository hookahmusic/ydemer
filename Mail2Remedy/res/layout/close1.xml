<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >


    <LinearLayout
	android:id="@+id/linearLayout2"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >



		<TextView
			android:id="@+id/TextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary" />   
		<EditText
            android:id="@+id/remedy_summary_felt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="1" />
        <Spinner
            android:id="@+id/Spinnercategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/afslut_sag_category" />             
		<Spinner
            android:id="@+id/Spinnertype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
		<Spinner
            android:id="@+id/Spinneritem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
		<TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worklog" />		<EditText
            android:id="@+id/remedy_worklog_felt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3" />
		<Spinner
            android:id="@+id/SpinnerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/afslut_sag_activity_spinner" />

					<TableRow
					    android:id="@+id/tableRow1"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content" >

	                    <LinearLayout
	                    	android:id="@+id/linearLayout6"
	                    	android:layout_width="wrap_content"
	                    	android:layout_height="wrap_content"
	                    	android:orientation="vertical" >
	                    	<TextView
	                        	android:id="@+id/TextView01"
	                        	android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:layout_weight="1"
	                            android:text="Prioritet:" />
	                        <Spinner
	                            android:id="@+id/SpinnerPriotet"
	                            android:layout_width="120dp"
	                            android:layout_height="wrap_content"
	                            android:layout_weight="1"
	                            android:entries="@array/afslut_sag_priotet" />
						</LinearLayout>

	                    <LinearLayout
	                    	android:id="@+id/linearLayout6"
	                    	android:layout_width="80dp"
	                    	android:layout_height="wrap_content"
	                    	android:orientation="vertical" >

	                    	<TextView
	                    	    android:id="@+id/TextView03"
	                    	    android:layout_width="wrap_content"
	                    	    android:layout_height="wrap_content"
	                    	    android:text="Luk Sagen" />

							<CheckBox
								android:id="@+id/Case_open"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" />
						</LinearLayout>
					
						<LinearLayout
	                    	android:id="@+id/linearLayout6"
	                    	android:layout_width="80dp"
	                    	android:layout_height="wrap_content"
	                    	android:orientation="vertical" >

							<TextView
							    android:id="@+id/Case_open_text"
							    android:layout_width="80dp"
							    android:layout_height="wrap_content"
							    android:text="Bruger ID  " />

							<EditText
							    android:id="@+id/BrugerIdText"
							    android:layout_width="match_parent"
							    android:layout_height="wrap_content" />
 
						</LinearLayout>
					</TableRow>

		<Button
			android:id="@+id/send_email"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="send sag" />
		<ProgressBar
			android:id="@+id/progress_bar"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />  </LinearLayout> 


</ScrollView>